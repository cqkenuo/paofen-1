
.wallet {
	width: 100%;
	height: 100%;
}
.bg {
	width: 90%;
	height: 300rpx;
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	margin: 0 auto;
	z-index: 1;
	text-align: center;
}
.zc_wallet {
	width: 90%;
	text-align: center;
	position: absolute;
	z-index: 2;
	left: 0;
	right: 0;
	top: 0;
	margin: 0 auto;
	padding-top: 60rpx;
	color: #FFFFFF;
}
.usdt_num {
	padding-top: 30rpx;
	font-size: 50rpx;
	color: #FFFFFF;
}
.wallet_pwd {
	padding-top: 350rpx;
	width: 90%;
	margin: auto;
}
.wallet_input {
	border: 1px solid #ccc;
	border-radius: 30rpx;
	text-align: left;
	padding-left: 20rpx;
	margin-top: 20rpx;
	height: 60rpx;
	line-height: 60rpx;
}

